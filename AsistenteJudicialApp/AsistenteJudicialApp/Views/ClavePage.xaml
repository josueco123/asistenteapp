<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsistenteJudicialApp.Views.ClavePage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10" Spacing="10" BackgroundColor="LightGray">
                <Frame>
                    <StackLayout Orientation="Vertical">
                        <Label Text="Olvidaste tu contraseña"  FontAttributes="Bold" FontSize="Large" TextColor="Black" HorizontalOptions="Center"/>
                        <Label Text="Ingresa el correo con que te registraste para cambiar tu contraseña" TextColor="Black" FontSize="Medium"  HorizontalOptions="Center"/>
                        <Entry x:Name="correoEntry" Keyboard="Email"/>
                        <Button x:Name="passbtn" Text="Cambiar" BackgroundColor="#0e457b" BorderRadius="20" TextColor="White" Clicked="Passbtn_Clicked"  />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>