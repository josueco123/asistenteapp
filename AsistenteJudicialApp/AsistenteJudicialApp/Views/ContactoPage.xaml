<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsistenteJudicialApp.Views.ContactoPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10" Spacing="10" BackgroundColor="LightGray">
                <Frame>
                    <StackLayout Orientation="Vertical">
                        <Label Text="Asistente Judicial 1.0" FontAttributes="Bold" FontSize="Large" TextColor="Black" HorizontalOptions="Center"/>
                        <Label Text="Correo: miasistentejudicial@gmail.com" FontSize="Small" TextColor="Black" />
                        <Label Text="Telefono: 300 7659642" FontSize="Small" TextColor="Black" />
                        <Button x:Name="terminosBtn" BackgroundColor="Transparent" HorizontalOptions="Center" Text="ver terminos y condiciones" Clicked="TerminosBtn_Clicked"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>