<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsistenteJudicialApp.Views.PagoPage"
             Title="Pagos">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10" Spacing="10" BackgroundColor="LightGray">
                <Frame>
                    <StackLayout Orientation="Vertical">
                        <Label Text="Precios" FontAttributes="Bold" FontSize="Medium" TextColor="Black" HorizontalOptions="Center"/>
                        <Label Text="$2.000 mensual por cada proceso" FontSize="Small" TextColor="Black"/>
                        <Label Text="Te hacemos descuentos si tienes más de 30 procesos registrados" FontSize="Small" TextColor="Black"/>
                        <Label x:Name="cantidaLabel"  FontSize="Small" TextColor="Black"/>

                    </StackLayout>
                </Frame>
                <Frame>
                    <StackLayout Orientation="Vertical">
                        <Label Text="Recibir Correo con Información de Pago" FontAttributes="Bold" FontSize="Medium" TextColor="Black" HorizontalOptions="Center"/>
                        <Label Text="Recuerda tener acualizados tus datos adicionales de contacto para comunicarnos en caso de presentarse algun inconvenientes"  FontSize="Small" TextColor="Black"/>
                        <Button Text="Enviar" x:Name="recibirBtn"  BackgroundColor="#0a3157" BorderRadius="20" TextColor="White"  />
                    </StackLayout>
                </Frame>
                <Frame>
                    <StackLayout Orientation="Vertical">
                        <Label Text="Realizar Pago Seguro en Linea" FontAttributes="Bold" FontSize="Medium" TextColor="Black" HorizontalOptions="Center"/>
                        <Button Text="Pagar" x:Name="pagopsBtn"  BackgroundColor="#0a3157" BorderRadius="20" TextColor="White" Clicked="PagopsBtn_Clicked"  />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>