<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsistenteJudicialApp.Views.DatosPage"
             Title="Datos adicionales">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10" Spacing="10" BackgroundColor="LightGray">
                <Frame>
                    <StackLayout Orientation="Vertical">
                        <Label Text="Cedula" FontAttributes="Bold" FontSize="Medium"  TextColor="Black"  />
                        <Entry x:Name="cedulaEntry" />
                        <Label Text="Celular" FontAttributes="Bold" FontSize="Medium" TextColor="Black" />
                        <Entry x:Name="telefonoEntry" Keyboard="Telephone" />
                        <Label Text="Direccion" FontAttributes="Bold" FontSize="Medium" TextColor="Black" />
                        <Entry x:Name="direccionEntry"/>

                        <Button Text="Registrase" x:Name="guardarBtn"  BackgroundColor="#061d34" BorderRadius="20" TextColor="White" Clicked="GuardarBtn_Clicked"  />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>