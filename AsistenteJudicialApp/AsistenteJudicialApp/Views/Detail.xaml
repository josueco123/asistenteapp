<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsistenteJudicialApp.Views.Detail"
             Title="Mis Procesos">
    <ContentPage.Content>

        <StackLayout  Padding="15,0">

            <ListView x:Name="lstProcesos" HasUnevenRows="True" ItemTapped="LstProcesos_ItemTapped" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Grid.Column="1" Text="{Binding radicacion}" FontAttributes="Bold" FontSize="Medium"/>
                                <Label Grid.Column="2" Text="{Binding juzgado}"  FontSize="Medium"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="agregarProceso" Text="Agragar Proceso" Clicked="AgregarProceso_Clicked"/>
        </StackLayout>
        
       
        
    </ContentPage.Content>
</ContentPage>